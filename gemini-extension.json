{
  "name": "Spanner",
  "version": "0.1.0",
  "description": "Connect to Spanner",
  "mcpServers": {
    "Spanner": {
      "command": "${extensionPath}${/}toolbox",
      "args": [
        "--prebuilt",
        "spanner",
        "--stdio"
      ],
      "env": {
        "SPANNER_PROJECT": "${SPANNER_PROJECT}",
        "SPANNER_INSTANCE": "${SPANNER_INSTANCE}",
        "SPANNER_DATABASE": "${SPANNER_DATABASE}"
      }
    }
  },
  "contextFileName": "SPANNER.md"
}